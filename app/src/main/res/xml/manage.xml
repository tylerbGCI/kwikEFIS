    <PreferenceCategory android:title="DATABASE" >
        <ListPreference
            android:defaultValue="0.75f"
            android:entries="@array/ac_list_names"
            android:entryValues="@array/ac_list_values"
            android:key="AircraftModel"
            android:summary="Select active aircraft model"
            android:title="Aircraft" />

        <ListPreference
            android:defaultValue="zar.aus"
            android:entries="@array/region_names"
            android:entryValues="@array/region_values"
            android:key="regionDatabase"
            android:summary="Select the operational database"
            android:title="Georaphic Region" />
    </PreferenceCategory>
        
    <PreferenceCategory android:title="SYSTEM" >
        <ListPreference
            android:defaultValue="0.75f"
            android:entries="@array/sensor_bias_names"
            android:entryValues="@array/sensor_bias_values"
            android:key="sensorBias"
            android:summary="Select the bank sensor/GPS bias"
            android:title="Bank Sensor" />

        <PreferenceScreen
            android:key="modeSelection"
            android:title="Demo / Locked / Panorama"
            android:persistent="false">

            <CheckBoxPreference
                android:defaultValue="false"
                android:key="demoMode"
                android:summary="Simulate GPS movement for demonstration"
                android:title="Demo" />
            <CheckBoxPreference
                android:defaultValue="false"
                android:key="lockedMode"
                android:summary="Lock the exit on back button"
                android:title="Locked" />

            <CheckBoxPreference
                android:defaultValue="false"
                android:key="landscapeMode"
                android:summary="Select Panorama view"
                android:title="Panorama" />
        </PreferenceScreen>


        <ListPreference
            android:defaultValue="0.0.0"
            android:key="version"
            android:entries="@array/version_names"
            android:entryValues="@array/version_values"
            android:summary="0.0.0"
            android:title="kwikEFIS version" />
    </PreferenceCategory>
</PreferenceScreen>

